# Auto detect text files and perform LF normalization
* text=auto

# Ensure files with these extensions use LF line endings
*.sh text eol=lf
*.py text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.html text eol=lf
*.css text eol=lf
*.json text eol=lf
*.md text eol=lf
*.txt text eol=lf

# Binary files should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary
*.jar binary
*.woff binary
*.woff2 binary

# Platform-specific files should not be merged
*.sln merge=binary
*.csproj merge=binary
*.user merge=binary